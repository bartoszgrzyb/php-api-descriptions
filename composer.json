{
  "name": "kleijnweb/php-api-descriptions",
  "type": "library",
  "authors": [
    {
      "name": "John Kleijn",
      "email": "john@kleijnweb.nl",
      "homepage": "http://www.kleijnweb.nl"
    }
  ],
  "license": "LGPL-3.0",
  "description": "A PHP library for creating \"contract-first\" API applications.",
  "autoload": {
    "psr-4": {
      "KleijnWeb\\PhpApi\\Descriptions\\Tests\\": "tests",
      "KleijnWeb\\PhpApi\\Descriptions\\": "src"
    }
  },
  "keywords": [
    "openapi",
    "swagger"
  ],
  "require": {
    "php": "^7.0.0",
    "psr/http-message": "^1.0",
    "symfony/yaml": ">=2.8.7",
    "league/json-guard": "^1.0",
    "psr/simple-cache": "^1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^6.4",
    "mikey179/vfsStream": "^1.6",
    "satooshi/php-coveralls": "^1.0",
    "squizlabs/php_codesniffer": "^3.2"
  },
  "config": {
    "bin-dir": "bin"
  }
}
